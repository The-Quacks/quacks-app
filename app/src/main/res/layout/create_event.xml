<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:foregroundTint="#D5B4B4"
    android:visibility="visible"
    tools:context=".CreateEvent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/create_an_event"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:orientation="vertical"
        android:id = "@+id/text_box"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:background = "@color/base"
        >

        <EditText
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint="Event Name" />
        <EditText
            android:id = "@+id/class_capacity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Class Capacity (53)"/>
        <EditText
            android:id = "@+id/waitlist_capacity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Waitlist Capacity (#)"/>
        <EditText
            android:id = "@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Event Date(dd-MM-yyyy)"/>
        <EditText
            android:id = "@+id/event_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Event Time (4:00pm)"/>
        <EditText
            android:id = "@+id/instructor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Instructor Name"/>
        <EditText
            android:id = "@+id/description"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Description"/>

        <CheckBox
            android:id="@+id/geolocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enable Geolocation?"
            app:centerIfNoTextEnabled="false" />

    </LinearLayout>

    <!-- Profile Picture Container -->

    <ImageView
        android:id="@+id/eventPoster"
        android:layout_width="120dp"
        android:layout_height="96dp"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/round_admin_button"
        android:contentDescription="@string/eventPoster"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_profile_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_box" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:elevation="10dp"
        android:fadingEdge="horizontal"
        android:stateListAnimator="@null"
        android:text="@string/upload_event_poster"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="7dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/eventPoster"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/upload_button">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.3"


            android:backgroundTint="@color/button"
            android:elevation="10dp"
            android:fadingEdge="horizontal"
            android:stateListAnimator="@null"
            android:text="BACK"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_box" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:layout_weight="0.3"
            android:backgroundTint="@color/button"
            android:elevation="10dp"

            android:fadingEdge="horizontal"
            android:stateListAnimator="@null"

            android:text="CONFIRM"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:cornerRadius="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_box"

            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>