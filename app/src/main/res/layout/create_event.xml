<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:foregroundTint="#D5B4B4"
    android:visibility="visible"
    tools:context=".CreateEvent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/create_an_event"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:orientation="vertical"
        android:id = "@+id/text_box"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:background = "@color/base"
        >

        <EditText
            android:id="@+id/event_name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint="Event Name" />
        <EditText
            android:id = "@+id/class_capacity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Class Capacity (53)"/>
        <EditText
            android:id = "@+id/waitlist_capacity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Waitlist Capacity (#)"/>
        <EditText
            android:id = "@+id/event_date"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Event Date(dd-MM-yyyy)"/>
        <EditText
            android:id = "@+id/event_time"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Event Time (4:00pm)"/>
        <EditText
            android:id = "@+id/instructor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Instructor Name"/>
        <EditText
            android:id = "@+id/description"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:ems="30"
            android:inputType = "text"
            android:hint ="Description"/>

        <CheckBox
            android:id="@+id/geolocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enable Geolocation?"
            app:centerIfNoTextEnabled="false" />
    </LinearLayout>

    <Button
        android:id="@+id/upload_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:elevation="10dp"
        android:stateListAnimator="@null"

        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop = "10dp"
        android:layout_marginBottom = "20dp"


        android:backgroundTint="@color/button"
        android:fadingEdge="horizontal"
        android:text="Upload Event Poster"
        android:textSize = "18sp"
        android:textColor="@color/black"
        app:cornerRadius="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf = "@id/text_box" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop = "20dp"
        app:layout_constraintTop_toBottomOf = "@id/upload_button">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight = "0.3"
            android:elevation="10dp"
            android:stateListAnimator="@null"


            android:backgroundTint="@color/button"
            android:fadingEdge="horizontal"
            android:text="BACK"
            android:textSize = "18sp"
            android:textColor="@color/black"
            app:cornerRadius="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf = "@id/text_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:elevation="10dp"
            android:stateListAnimator="@null"

            android:backgroundTint="@color/button"
            android:fadingEdge="horizontal"
            android:text="CONFIRM"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"

            android:textSize = "18sp"
            android:textColor="@color/black"
            android:layout_weight = "0.3"
            app:cornerRadius="7dp"
            app:layout_constraintTop_toBottomOf = "@id/text_box"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background = "@color/base"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id = "@+id/house"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src = "@drawable/image_163"
            android:contentDescription="Button"
            android:background="@color/base"
            android:layout_alignParentLeft="true"
            />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:background="@color/base"
            android:contentDescription="Button"
            android:src="@drawable/image_164"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id = "@+id/person"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/base"
            android:contentDescription="Button"
            android:src = "@drawable/profile_icon_tiny"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>