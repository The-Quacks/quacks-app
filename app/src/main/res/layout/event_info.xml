<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:foregroundTint="#D5B4B4"
    android:visibility="visible"
    tools:context=".EventInfo">

    <LinearLayout
        android:id = "@+id/event_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background = "@color/white"
        android:orientation = "vertical"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintBottom_toTopOf="@id/organizer_profile_button"
        app:layout_constraintTop_toTopOf = "parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Event Information"
            android:textColor="@color/text"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name" />
        <TextView
            android:id = "@+id/class_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:text ="Class Capacity"/>
        <TextView
            android:id = "@+id/waitlist_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:text ="Waitlist Capacity"/>
        <TextView
            android:id = "@+id/registration_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:text ="Beginning Registration Date(2024-03-19)"/>
        <TextView
            android:id = "@+id/registration_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:text ="Closing Registration Date (2024-03-19)"/>
        <TextView
            android:id = "@+id/instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:text ="Instructor Name"/>
        <TextView
            android:id = "@+id/geolocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="30"
            android:text ="Geolocation (Enabled/Disabled)"/>



    </LinearLayout>



    <Button
        android:id="@+id/organizer_profile_button"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button"
        android:drawableTop = "@drawable/image_51"
        android:fadingEdge="horizontal"
        android:text="Open Registration"
        android:textSize = "15sp"
        android:textColor="@color/black"
        app:cornerRadius="7dp"
        android:layout_marginStart = "15dp"
        app:layout_constraintTop_toBottomOf = "@id/event_box"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/view_events"
        android:layout_width="175dp"
        android:layout_height="175dp"

        android:elevation="10dp"
        android:stateListAnimator="@null"

        android:layout_marginTop="20dp"
        android:backgroundTint="@color/button"
        android:drawableTop = "@drawable/image_49"
        android:fadingEdge="horizontal"
        android:text="Close Registration and Notify"
        android:textSize ="15sp"
        android:textColor="@color/black"
        app:cornerRadius="7dp"
        android:layout_marginEnd = "15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf = "@id/event_box"
        />
    <Button
        android:id="@+id/create_event"
        android:layout_width="175dp"
        android:layout_height="150dp"

        android:elevation="10dp"
        android:stateListAnimator="@null"

        android:layout_marginTop="170dp"
        android:backgroundTint="@color/button"
        android:drawableTop = "@drawable/image_52"
        android:fadingEdge="horizontal"
        android:text="Create Event"
        android:textSize = "18sp"
        android:textColor="@color/black"
        app:cornerRadius="7dp"
        android:layout_marginStart = "15dp"
        app:layout_constraintTop_toBottomOf = "@id/event_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/map"
        android:layout_width="175dp"
        android:layout_height="150dp"

        android:elevation="10dp"
        android:stateListAnimator="@null"

        android:layout_marginTop="170dp"
        android:backgroundTint="@color/button"
        android:drawableTop = "@drawable/image_50"
        android:fadingEdge="horizontal"
        android:text="Entrant Map"
        android:textSize = "18sp"
        android:textColor="@color/black"
        app:cornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf = "@id/event_box"
        android:layout_marginEnd = "15dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background = "@color/base"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id = "@+id/house"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src = "@drawable/image_163"
            android:contentDescription="Button"
            android:background="@color/base"
            android:layout_alignParentLeft="true"
            />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:background="@color/base"
            android:contentDescription="Button"
            android:src="@drawable/image_164"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id = "@+id/person"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/base"
            android:contentDescription="Button"
            android:src = "@drawable/image_165"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>