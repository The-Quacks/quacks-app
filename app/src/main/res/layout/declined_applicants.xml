<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/declined_applicants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:foregroundTint="#D5B4B4"
    android:visibility="visible"
    tools:context=".DeclinedApplicants">

    <TextView
        android:id="@+id/declined_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Declined Applicant List"
        android:textColor="@color/text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/declined_notify_button"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/button"
        android:text="NOTIFY ALL"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/declined_app_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/declined_title" />

    <Button
        android:id="@+id/declined_select_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/button"
        android:gravity="center"
        android:text="SELECT"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/declined_app_list"
        app:layout_constraintEnd_toStartOf="@+id/declined_notify_button"
        app:layout_constraintStart_toEndOf="@+id/declined_back_button"
        app:layout_constraintTop_toBottomOf="@+id/declined_title" />

    <Button
        android:id="@+id/declined_back_button"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/button"
        android:text="BACK"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/declined_app_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/declined_title" />

    <ListView
        android:id="@+id/declined_app_list"
        android:layout_width="match_parent"
        android:background="@color/base"
        android:layout_height="635dp"
        app:layout_constraintTop_toBottomOf = "@id/declined_title"
        android:layout_marginTop = "110dp"
        android:layout_marginBottom = "35dp"
        app:layout_constraintBottom_toTopOf = "@id/declined_bottom_section">

    </ListView>




    <RelativeLayout
        android:id = "@+id/declined_bottom_section"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background = "@color/background"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id = "@+id/declined_app_house"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src = "@drawable/image_163"
            android:contentDescription="Button"
            android:background="@color/background"
            android:layout_alignParentLeft="true"
            />

        <ImageButton
            android:id="@+id/declined_app_search"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:background="@color/background"
            android:contentDescription="Button"
            android:src="@drawable/image_164"
            android:layout_centerHorizontal="true"
            />

        <ImageButton
            android:id = "@+id/declined_app_person"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/background"
            android:contentDescription="Button"
            android:src = "@drawable/profile_icon_tiny"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>